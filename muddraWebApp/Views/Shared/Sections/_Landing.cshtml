@model LandingViewModel
@if (Model != null)
{
    <section class="relative min-h-screen">
        <div class="flex items-center justify-center min-h-screen">
            <div class="landing-video-container relative overflow-hidden shadow-3xl">
                <video 
                    autoplay 
                    muted 
                    loop
                    playsinline
                    class="absolute inset-0 w-full h-full object-cover">
                    <source src="~/Assets/Imgs/App/theresia555.webm" type="video/webm">
                </video>
                
                <div class="absolute inset-0 bg-black/40 z-10"></div>
                
                <div class="absolute inset-0 flex items-center z-20 p-2 md:p-6">
                    <div class="container mx-auto px-2 md:px-6 lg:px-12">
                        <div class="text-left max-w-3xl">
                            @if (Model.Title != null)
                            {
                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-[#ebecf7] mb-2 md:mb-6 fade-in-up delay-200 drop-shadow-2xl">
                                    @Model.Title
                                </h1>
                            }

                            @if (Model.Messgae != null)
                            {
                                <p class="text-xl md:text-2xl lg:text-3xl text-[#ebecf7] font-light leading-relaxed mb-4 md:mb-10 fade-in-up delay-400 drop-shadow-lg">
                                    @Model.Messgae
                                </p>
                            }
                            
                            <div class="flex flex-col sm:flex-row gap-4 fade-in delay-1200">
                                <a href="#services" 
                                   class="inline-flex items-center justify-center px-4 py-2 text-xs font-semibold rounded-full 
                                          bg-white text-black no-underline ">
                                    Se alla Tjänster
                                </a>
                                <a href="#contact-form"
                                   class="inline-flex items-center justify-center px-8 py-4 text-xs font-semibold rounded-full 
                                          bg-white text-black no-underline backdrop-blur-sm">
                                    Kontakta oss
                                    <i class="fa-regular fa-paper-plane ml-2"></i>
                                  </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <style>
        .landing-video-container {
            width: 95%;
            max-width: 1400px;
            height: 80vh;
            border-radius: 1.5rem; /* equivalent to rounded-3xl */
        }
        
        .landing-video-container a {
            text-decoration: none !important;
        }
        
        .landing-video-container a:hover {
            text-decoration: none !important;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .fade-in-up {
            animation: fadeInUp 1s ease-out both;
        }
        
        .delay-200 {
            animation-delay: 0.2s;
        }
        
        .delay-400 {
            animation-delay: 0.4s;
        }
        
        .delay-600 {
            animation-delay: 0.6s;
        }
        
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-out both;
        }
        
        .delay-1200 {
            animation-delay: 1.2s;
        }
    </style>
}
