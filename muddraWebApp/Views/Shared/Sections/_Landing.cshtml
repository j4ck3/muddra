@model LandingViewModel
@if (Model != null)
{
    <section class="relative" style="min-height: 100vh">
        <!-- Centered Video Container with fixed height -->
        <div style="display: flex; align-items: center; justify-content: center; min-height: 100vh;">
            <div style="position: relative; width: 95%; max-width: 1400px; height: 80vh; border-radius: 1.5rem; overflow: hidden; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);">
                <!-- Background Video -->
                <video 
                    autoplay 
                    muted 
                    loop 
                    playsinline
                    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;">
                    <source src="~/Assets/Imgs/App/theresia555.webm" type="video/webm">
                </video>
                
                <!-- Dark Overlay -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); z-index: 10;"></div>
                
                <!-- Content Container -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; align-items: center; z-index: 20; padding: 1.5rem;">
                    <div class="container mx-auto px-6 lg:px-12">
                        <div class="text-left max-w-3xl">
                            @if (Model.Title != null)
                            {
                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-white mb-6 fade-in-up delay-200 drop-shadow-2xl">
                                    @Model.Title
                                </h1>
                            }

                            @if (Model.Messgae != null)
                            {
                                <p class="text-xl md:text-2xl lg:text-3xl text-white font-light leading-relaxed mb-10 fade-in-up delay-400 drop-shadow-lg">
                                    @Model.Messgae
                                </p>
                            }
                            
                            <div class="flex flex-col sm:flex-row gap-4 fade-in-up delay-600">
                                <a href="#services" 
                                   class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-full 
                                          bg-white hover:bg-cyan-100 
                                          transition-all duration-300 transform hover:scale-105 hover:shadow-xl
                                          shadow-lg"
                                   style="color: #000 !important; text-decoration: none !important;">
                                    Se alla Tjänster
                                </a>
                                <a href="#contact-form"
                                   class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-full 
                                          bg-white/90 backdrop-blur-sm hover:bg-white 
                                          transition-all duration-300 transform hover:scale-105 hover:shadow-xl
                                          shadow-lg"
                                   style="color: #000 !important; text-decoration: none !important;">
                                    Kontakta oss
                                    <i class="fa-regular fa-paper-plane ml-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Scroll indicator -->
                <div id="scroll-indicator" style="position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%); z-index: 30;" class="flex justify-center animate-bounce transition-opacity duration-300">
                    <a href="#services" class="text-white hover:text-cyan-300 transition-colors">
                        <i class="fa-solid fa-chevron-down text-3xl"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
    
    <style>
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .fade-in-up {
            animation: fadeInUp 1s ease-out both;
        }
        
        .delay-200 {
            animation-delay: 0.2s;
        }
        
        .delay-400 {
            animation-delay: 0.4s;
        }
        
        .delay-600 {
            animation-delay: 0.6s;
        }
    </style>
    
    <script>
        (function() {
            const indicator = document.getElementById('scroll-indicator');
            if(indicator) {
                window.addEventListener('scroll', function() {
                    if (window.scrollY > 100) {
                        indicator.style.opacity = '0';
                        indicator.style.pointerEvents = 'none';
                    } else {
                        indicator.style.opacity = '1';
                        indicator.style.pointerEvents = 'auto';
                    }
                });
            }
            
            // Smooth scroll to contact form
            const contactLinks = document.querySelectorAll('a[href="#contact-form"]');
            contactLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const contactForm = document.getElementById('contact-form');
                    if (contactForm) {
                        contactForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        // Focus first input after scroll
                        setTimeout(() => {
                            const firstInput = contactForm.querySelector('input, textarea');
                            if (firstInput) firstInput.focus();
                        }, 500);
                    }
                });
            });
        })();
    </script>
}