@model ServiceItemViewModel

<div class="w-full mb-4 md:mb-0 border border-[#5a6278] rounded-xl p-2 md:p-3">
    <div class="flex flex-col md:flex-row rounded-xl overflow-hidden">
        <div class="w-full md:w-64 lg:w-80 shrink-0 overflow-hidden self-stretch rounded-xl">
            @if (Model.ImageUrl != null)
            {
                <img class="w-full h-auto md:h-full md:w-full object-cover rounded-xl" 
                     src="@Url.Content("~/Assets/Imgs/Services/" + Model.ImageUrl)" 
                     alt="@Model.Title">
            }
        </div>
        <div class="p-4 md:p-6 bg-linear-to-br from-black/20 to-black/70 md:bg-none md:from-transparent md:to-transparent flex flex-col justify-center flex-1">
            <h3 class="text-[#ebecf7] text-3xl md:text-4xl font-extrabold mb-2">@Model.Title</h3>
            @if (Model.Description != null)
            {
                <p class="text-[#ebecf7]/90 text-sm md:text-base leading-relaxed">@Model.Description</p>
            }
        </div>
    </div>
</div>