@model ServiceItemViewModel
<div class="col-12 px-4 mb-4">
    <div class="flex flex-col md:flex-row rounded-xl overflow-hidden w-full md:bg-gradient-to-br md:from-black/20 md:to-black/70">
        <div class="w-full md:w-64 lg:w-80 shrink-0 overflow-hidden self-stretch">
            @if (Model.ImageUrl != null)
            {
                <img class="w-full h-auto md:h-full md:w-full object-cover md:rounded-l-xl md:rounded-r-none" 
                     src="@Url.Content("~/Assets/Imgs/Services/" + Model.ImageUrl)" 
                     alt="@Model.Title" />
            }
        </div>
        <div class="p-4 md:p-6 bg-gradient-to-br from-black/20 to-black/70 md:bg-none md:from-transparent md:to-transparent flex flex-col justify-center flex-1">
            <h3 class="text-white text-lg md:text-xl font-semibold mb-2">@Model.Title</h3>
            @if (Model.Description != null)
            {
                <p class="text-white/90 text-sm md:text-base leading-relaxed">@Model.Description</p>
            }
        </div>
    </div>
</div>
