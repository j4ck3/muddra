@model ServicesViewModel
<div id="services" class="max-w-5xl mx-auto px-2 md:px-4 py-4 md:py-12 mb-4">
    @if (Model.ServiceItems != null)
    {
        <h2 class="mt-4 md:mt-8 mb-3 md:mb-4 text-left text-lg md:text-xl font-light text-[#ebecf7]/90">@Model.Title</h2>
        <div class="flex flex-col gap-6 md:gap-8">
            @foreach (var item in Model.ServiceItems)
            {
                <partial name="../Shared/Sections/_ServiceTile" model="item" />
            }
        </div>
    }
</div>